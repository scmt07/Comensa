<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tulio.tcc.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/opening" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/container_layout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_Erro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/violet"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView_Usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="ID:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_Usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textColor="@color/violet"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView_Senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Senha:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_Senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="15dp"
            android:text="Login"
            android:background="@color/black"
            android:textColor="#CCFFFFFF"
            android:textStyle="bold"
            android:onClick="login" />

        <TextView
            android:id="@+id/textView_Cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:onClick="cadastraUsuario"/>
    </GridLayout>

</RelativeLayout>
