<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBlue"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <GridLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="35dp"
        android:background="@drawable/container_layout"
        android:orientation="vertical"
        android:paddingBottom="7dp"
        android:id="@+id/gridLayout">

        <TextView
            android:id="@+id/textView_tSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Senha: "
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_tSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:inputType="textPassword"
            android:ems="10" />

        <TextView
            android:id="@+id/textView_tSenhaNova"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Nova Senha:"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_tSenhaNova"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:inputType="textPassword"
            android:ems="10" />

        <Button
            android:id="@+id/button_Cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Trocar"
            android:textColor="#CCFFFFFF"
            android:textStyle="bold"
            android:onClick="trocar"/>
    </GridLayout>

</RelativeLayout>